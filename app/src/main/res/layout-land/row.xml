<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:id="@+id/userIcon"
        android:src="@mipmap/music"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMsg"
        android:textSize="22dp"
        android:layout_below="@+id/txtTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:id="@+id/txtUser"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/userIcon"
        android:layout_toRightOf="@+id/userIcon"
        android:layout_toEndOf="@+id/userIcon"
        android:layout_above="@+id/txtTime" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:id="@+id/txtTime"
        tools:textColor="@color/common_plus_signin_btn_text_dark_disabled"
        android:layout_alignBottom="@+id/userIcon"
        android:layout_alignLeft="@+id/txtUser"
        android:layout_alignStart="@+id/txtUser" />
</RelativeLayout>